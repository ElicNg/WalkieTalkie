<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.elicng.walkietalkie.activities.WifiDirectActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:id="@+id/btnDiscover"
        android:onClick="btnStartDiscovery_onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Advertise"
        android:id="@+id/button2"
        android:onClick="btnStartAdvertise_onClick"
        android:layout_alignTop="@+id/btnDiscover"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop advertise"
        android:id="@+id/button3"
        android:onClick="btnStartDiscovery_onClick"
        android:layout_below="@+id/btnDiscover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/discoveredDeviceList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/audiovolumebar"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnMicrophone"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/btnDiscover"
        android:layout_toEndOf="@+id/btnDiscover" />


</RelativeLayout>
